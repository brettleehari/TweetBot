{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run trading-prod",
    "restartPolicyType": "ALWAYS"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "healthcheck": {
    "path": "/api/status",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}