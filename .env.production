# Production Environment Variables for 24/7 Trading
NODE_ENV=production
PORT=3000

# API Keys (Add your actual keys for production)
COINGECKO_API_KEY=your_coingecko_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
NEWS_API_KEY=your_news_api_key_here

# Trading Parameters
INITIAL_CORPUS=10000
MAX_POSITION_SIZE=0.15
MIN_CASH_RESERVE=0.05
TRADING_INTERVAL=1800000
PRICE_UPDATE_INTERVAL=300000

# Social Media API Keys (Optional)
TWITTER_API_KEY=your_twitter_key
TWITTER_API_KEY_SECRET=your_twitter_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_secret

# Gemini AI for Sentiment Analysis
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key

# Monitoring & Alerts
HEALTH_CHECK_INTERVAL=300000
REPORT_GENERATION_INTERVAL=86400000

# Database (Optional - for larger scale)
DATABASE_URL=your_database_url_here